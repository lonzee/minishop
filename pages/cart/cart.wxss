.container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    height: 100%;
    padding: 200rpx 0;
    font-family: '宋体';
}

.carts-list {
    display: flex;
    flex-direction: column;
    padding: 20rpx 40rpx;
    background: #fff;
}

.carts-list icon {
    margin-top: 60rpx;
    margin-right: 20rpx;
}

.carts-item {
    display: flex;
    flex-direction: row;
    height: 150rpx;
    width: 100%;
    border-bottom: 20rpx solid #f3f3f3;
    padding: 30rpx 0;
    border-radius: 40rpx;
}

.carts-image {
    width: 80px;
    height: 80px;
    overflow: hidden;
}

.carts-text {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.carts-title {
    margin: 10rpx;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.carts-subtitle {
    font-size: 15px;
    color: darkgray;
    padding: 0 10px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.carts-price {
    color: #f60;
}

.model-close {
    margin-left: 100px;
    padding: 20px 0;
    color: #939393;
}

.stepper {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-top: 20px;
}

.stepper text {
    background-color: #f3f3f3;
    width: 26px;
    height: 26px;
    line-height: 26px;
    text-align: center;
    font-weight: 900;
    color: #939393;
}

.stepper input {
    width: 43px;
    height: 26px;
    text-align: center;
    border-radius: 6rpx;
    border-top: 1px solid #f2f2f2;
    border-bottom: 1px solid #f2f2f2;
}

.carts-footer {
    font-weight: bold;
    position: fixed;
    width: 100%;
    height: 40px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    bottom: 0;
    border-top: 1px solid #eee;
    z-index: 999;
    background: #fff;
}

.carts-footer icon {
    margin-left: 10px;
    margin-top: 10px;
    color: #fff;
}

.carts-footer text {
    font-size: 16px;
    margin-left: 5px;
    line-height: 5px;
}

.carts-footer .button {
    width: 100px;
    line-height: 40px;
    text-align: center;
    background: #dd2727;
    color: #fff;
    font-size: 18px;
    border-radius: 20px;
}