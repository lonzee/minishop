/* 播放按钮 */
.player {
  position: fixed;
  top: 500rpx;
  right: 10rpx;
  /* 提高堆叠顺序 */
  z-index: 1;
}

.player>image:first-child {
  width: 70rpx;
  height: 70rpx;
}

.slide_image{
  width: 100%;
  height: 150px;
}

.tip{
  margin: 0 auto;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 15px;
  font-weight: bold;
}

.line{
  width: 70%;
  border-bottom: 1rpx solid #ededed;
  margin: 0 auto 15rpx auto;
  padding-bottom: 5rpx;
}