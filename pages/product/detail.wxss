.slide-image {
  width: 100%;
  height: 100%;
}

.box_mod {
  margin-bottom: 10rpx;
}

.mixhead {
  width: 60%;
  border-bottom: 2rpx solid #eee;
  text-align: center;
  line-height: 80rpx;
  font-size: 14px;
  margin: 0 auto;
}

.foot_fixed {
  display: block;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 100;
  width: 100%;
  border-top: 1px solid #eee;
  line-height: 50px;
}

.widper {
  width: 125px;
  /* margin: 5px; */
  text-align: center;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  z-index: 100;
}

.drawer_attr_box {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 200;
  background: #fff;
  border-radius: 40rpx;
}

.drawer_image {
  width: 265rpx;
  height: 200rpx;
}

.tip_intro {
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 14px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.buy_box {
  width: 100%;
  margin-top: 35rpx;
  margin-bottom: 50rpx;
  font-size: 14px;
}

.buy_num {
  width: 70%;
  display: inline-block;
}

.buy_step {
  display: flex;
  justify-content: space-between;
  margin-left: 250rpx;
  background: #fcfcfc;
}

.buy_step text {
  width: 26px;
  height: 26px;
  text-align: center;
  font-weight: 900;
  color: #939393;
}

